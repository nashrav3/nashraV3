{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "preserveWatchOutput": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "module": "ES2022",
    "target": "ES2021",
    "moduleResolution": "Bundler",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "scripts/**/*"
  ]
}
